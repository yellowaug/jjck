                @Html.DisplayFor(modelItem => item.VMLoginIp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VMLoginPassWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VMCreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VmAccountDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaId)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpVMacc","VMAccount", new { id = item.VmhostId }, new { target = "_blank" }) |
                @Html.ActionLink("Details", "Details", new { id = item.VmhostId }) |
